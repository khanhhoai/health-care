  <div class="container">

      <div class="sub-heading">
        
      </div>
    

    <div class="main">
      <div class="home">
        <div class="left">
          

          <h2 class="heading-2">
            {{news.title}}
          </h2>
          <p class="home-img"><span>{{news.createAt}}</span></p>
          <img src="{{news.image}}" class="home-img" alt="Paper photo">
        </div>

        
      </div>
               
      <div>
        <p class="news" data-news="{{news.detaildescription}}">{{news.detaildescription}}</p>

      </div>
      <p><strong>{{news.author}}</strong></p>
    </div>
  </div>

<script>
  
    const news = document.querySelectorAll(".news");
      
    // Loop through each element with the class "news"
    news.forEach((element) => {
    // Get the value of the data-presentation attribute
    const article = element.dataset.news;
    
    // Example: Manipulate the content of each element
    element.innerHTML = article;
    return element.textContent || element.innerText || '';
    });
</script>
  



